{
  "name": "narration-editor",
  "version": "1.0.0",
  "description": "Text editor with OpenAI TTS integration",
  "main": "dist/main/index.js",
  "type": "module",
  "scripts": {
    "build": "npm run build:main && npm run build:preload && npm run build:renderer && npm run copy:html",
    "build:main": "tsc -p tsconfig.main.json",
    "build:preload": "tsc -p tsconfig.preload.json",
    "build:renderer": "tsc -p tsconfig.json",
    "copy:html": "cp src/renderer/index.html dist/renderer/",
    "start": "npm run build && electron .",
    "package": "npm run build && electron-builder --mac"
  },
  "keywords": [
    "electron",
    "tts",
    "openai"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.3.1",
    "openai": "^4.73.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "typescript": "^5.3.3",
    "vite": "^5.0.0"
  },
  "build": {
    "appId": "com.narration.editor",
    "productName": "Narration Editor",
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "universal"
          ]
        }
      ]
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release"
    }
  }
}
